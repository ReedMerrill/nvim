# Lazygit
alias lg='lazygit'
# [f]ile [o]pen: open anything, using rifle as the opener
alias fo='cd ~ && fd . --type f --hidden --follow --exclude .git | fzf | while read -r file; do rifle "$file"; done'
# [d]ir [c]hange
alias dc='cd ~ && fd . --type d --hidden --follow --exclude .git | fzf | while read -r dir; do cd "$dir"; done'
# [s]ource .zshrc
alias so='source ~/.zshrc'
# [n]eovim [d]ot[f]iles
alias ndf='cd ~/dotfiles/nvim/.config/nvim/ && nvim .'
# [g]it [s]tatus
alias gs='git status'
# make R not prompt to save workspace on exit
alias R='R --no-save'
# [n]uclear [r]e[m]ove
alias nrm='sudo rm -r'
# clear
alias cl='clear'
# make dir (all non-existent directories in the specified path)
alias md='mkdir -p'
